{
  "manifest_version": 3,
  "name": "Pomodoro Timer",
  "version": "1.0.0",
  "description": "A Pomodoro timer extension with data visualization",
  "action": {
    "default_popup": "src/popup/index.html"
  },
  "permissions": [
    "storage",
    "alarms"
  ],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  }
}